<h2><%= @list.name %></h2>
<h3><%= link_to 'Add a movie', new_list_bookmark_path(@list)%></h3>
  <% @list.bookmarks.each do |bookmark| %>
    <div>
      <%= image_tag  Movie.find(bookmark.movie_id).poster_url, alt: "", width: 200 %>
      <h4><%= Movie.find(bookmark.movie_id).title%> - <%= Movie.find(bookmark.movie_id).rating.to_f %>‚≠ê</h4>
      <p><%= Movie.find(bookmark.movie_id).overview %></p>
       <li class="list-group-item">
      <%= link_to "Delete",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
    </div>
  <% end %>
